{% extends '::base_xhr.html.twig' %}

{% block page_content %}

    <h1 style="text-align: center; margin-bottom: 40px">
        {{ entity.title }}
    </h1>

    <div class="ui divider"></div>

    <div>
        {% for contentRelated in entity.getContentRelated() %}
            <h3 style="margin: 5px 0">
                {{ contentRelated.getItem().getTitle()}}
                <div style="font-weight: normal; font-size: 90%">{{ contentRelated.getItem().subTitlesToString('<br>')|raw }}</div>
            </h3>
            <div>{{ contentRelated.getItem().getBody()|raw }}</div>
        {% endfor %}
    </div>

{% endblock %}

